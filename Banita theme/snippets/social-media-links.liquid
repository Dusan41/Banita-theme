<h4 class="social-list-title">{{ 'general.theme.stay_with_us' | t }}:</h4>
<ul class="social-list-simple social-list--color text-inline">
{% if settings.social_facebook_link != blank %}
    <li><a target="_blank" href="{{ settings.social_facebook_link }}" title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}">
        <i class="icon icon-facebook-logo facebook-color"></i>
